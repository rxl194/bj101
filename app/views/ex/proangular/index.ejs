<!DOCTYPE html>
<html xmlns:ng="http://angularjs.org">
<head>
  <!-- Use the 'title' property to render a page title  -->
  <title><%= title %></title>
  <link href="/cex/proangular/css/bootstrap.css" rel="stylesheet" />
  <link href="/cex/proangular/css/bootstrap-theme.css" rel="stylesheet" />
</head>
<body>
  <!-- Render the user object -->
  <script type="text/javascript">
    window.user = <%- cys_user || 'null' %>;
    window.model = {
            items: [{ action: "Buy Flowers", done: false },
                        { action: "Get Shoes", done: false },
                        { action: "Collect Tickets", done: true },
                        { action: "Call Joe", done: false }]
    };
  </script>

  <!-- Render AngularJS views  -->
  <section ng-view></section>

  <!-- Load local libraries -->
  <script type="text/javascript" src="/lib/angular/angular.js"></script>
  <script type="text/javascript" src="/lib/angular-route/angular-route.js"></script>
  <script type="text/javascript" src="/lib/angular-resource/angular-resource.js"></script>

  <!-- Load the users module -->
  <script type="text/javascript" src="/cys/users/cys_users.module.js"></script>
  <script type="text/javascript" src="/cys/users/services/authentication.client.service.js"></script>

  <!-- Load the coa-todolists module -->
  <script type="text/javascript" src="/coa/todolists/coa_todolists.module.js"></script>
  <script type="text/javascript" src="/coa/todolists/controllers/coa_todolists.controller.js"></script>
  <script type="text/javascript" src="/coa/todolists/config/coa_todolists.routes.js"></script>
  <script type="text/javascript" src="/coa/todolists/filters/coa_todolists.filter.js"></script>

  <!-- Load the cex-proangular module -->
  <script type="text/javascript" src="/cex/proangular/cex_proangular.module.js"></script>
  <script type="text/javascript" src="/cex/proangular/controllers/cex_proangular.controller.js"></script>

  <!-- Bootstrap AngularJS application -->
  <script type="text/javascript" src="/cex/proangular/application.js"></script>
</body>
</html>

